@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "Cinemies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="row">
            <div class="col-lg-3 ">
                <div id="DataTables_Table_0_filter" class="dataTables_filter">
                    <input type="text" id="myInput" placeholder="Search for .." class="form-control form-control-sm" aria-controls="DataTables_Table_0">
                </div>
            </div>
            <div class="col-lg-6 "></div>
            <div class="col-lg-3  ">
                <a class="btn btn-outline-primary" asp-action="Create"><i class="bi bi-pencil-square"></i>Add New Cinema</a>
            </div>
        </div>
        <table class="table" id="myTable">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
